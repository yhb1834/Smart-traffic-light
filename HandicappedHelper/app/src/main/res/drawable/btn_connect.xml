<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient
                android:startColor="#2A776F"
                android:endColor="#4975A3"
                android:angle="180"/>
            <corners
                android:radius="75dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#2A776F"
                android:endColor="#4975A3"
                android:angle="0"/>
            <corners
                android:radius="75dp" />
        </shape>
    </item>
</selector>